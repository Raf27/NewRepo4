            <input type="radio" name="slide" id="img3">
            <input type="radio" name="slide" id="img4">

            <img src="~/Images/1.jpg" class="m1" alt="img1">
            <img src="~/Images/37.jpg" class="m2" alt="img2">
            <img src="~/Images/32.jpg" class="m3" alt="img3">
            <img src="~/Images/24.jpg" class="m4" alt="img4">
            <img src="~/Images/33.jpg" class="m4" alt="img5">
        </div>
        <div class="dots">
            <label for="img1"></label>
            <label for="img2"></label>
            <label for="img3"></label>
        </div>
    </div>

